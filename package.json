{
  "name": "froggle",
  "version": "1.49.0",
  "description": "FROGGLE - A tactical turn-based roguelike PWA",
  "main": "electron-main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "./build.sh",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux AppImage",
    "dist:win": "electron-builder --win portable",
    "dist:all": "electron-builder --linux AppImage --win portable",
    "dist:mac": "electron-builder --mac dmg"
  },
  "dependencies": {
    "steamworks.js": "^0.3.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "build": {
    "appId": "com.froggle.game",
    "productName": "FROGGLE",
    "directories": {
      "output": "dist"
    },
    "asarUnpack": [
      "**/steamworks.js/**"
    ],
    "files": [
      "index.html",
      "electron-main.js",
      "electron-preload.js",
      "steam_appid.txt",
      "manifest.json",
      "sw.js",
      "assets/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "icon": "assets/tapo.png",
      "artifactName": "${productName}-S_${version}-linux.${ext}"
    },
    "win": {
      "target": "portable",
      "icon": "assets/tapo.png",
      "artifactName": "${productName}-S_${version}-windows.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/tapo.png",
      "category": "public.app-category.games",
      "artifactName": "${productName}-S_${version}-mac.${ext}"
    }
  },
  "keywords": [
    "game",
    "roguelike",
    "pwa",
    "tactical"
  ],
  "author": "",
  "license": "ISC"
}
